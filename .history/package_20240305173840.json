{
  "scripts": {
    "save": "git add . && git commit -m \"patch\" && git push",
    "start": "npm run build:watch & echo \"now start a live server\"",
    "build": "npm run build:js && npm run build:bundle",
    "build:watch": "npm run build:js:watch & npm run bundle:watch",
    "build:bundle": "node runBundleScript.js",
    "build:js": "tsc -p tsconfig.json",
    "build:js:watch": "tsc -p tsconfig.json --watch",
    "bundle:watch": "nodemon --exec 'npm run build:bundle' --watch assets"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "peerDependencies": {
    "taggedjs": ">=2.4",
    "taggedjs-common": "github:ackerapple/taggedjs-common"
  }
  "dependencies": {
    "taggedjs": "github:ackerapple/taggedjs",
    "taggedjs-common": "github:ackerapple/taggedjs-common"
  }
}
